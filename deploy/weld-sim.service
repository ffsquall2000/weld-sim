[Unit]
Description=UltrasonicWeldMaster Simulation Service
After=network.target

[Service]
Type=simple
User=squall
WorkingDirectory=/opt/weld-sim
ExecStart=/opt/weld-sim/venv/bin/uvicorn backend.app.main:app --host 0.0.0.0 --port 8001
Restart=always
RestartSec=5
Environment=PYTHONPATH=/opt/weld-sim
Environment=UWM_DATA_DIR=/opt/weld-sim/data

[Install]
WantedBy=multi-user.target
